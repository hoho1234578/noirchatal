<div id="new_in" class="container-fluid home_page_section">
  <h3>NEW IN</h2>
  <% for(var i=0; i<new_items.length; i++) { if (new_items[i].available == true) { %>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 item_list">
      <div class="hovereffect">
        <img class="img-responsive" src="/images/collections/<%= new_items[i].item_img %>" alt="">
        <div class="overlay">
          <a class="info" href="/collections/details/<%= new_items[i].id %>">
            <p class="item_name"><%= new_items[i].item_name %></p>
            <p class="item_price">NT$<%= new_items[i].price %></p>
          </a>
        </div>
      </div>
    </div>
  <% }} %>
</div>

